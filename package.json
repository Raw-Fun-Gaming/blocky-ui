{
  "name": "blocky-ui",
  "version": "1.0.0",
  "description": "A lightweight, 3D blocky-themed UI component library built with TypeScript and pure CSS",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "ui",
    "components",
    "typescript",
    "css",
    "blocky",
    "3d",
    "animations",
    "vanilla-js",
    "lightweight",
    "game-ui",
    "zero-dependencies"
  ],
  "author": "Richard Fu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fur-gaming/blocky-ui.git"
  },
  "bugs": {
    "url": "https://github.com/fur-gaming/blocky-ui/issues"
  },
  "homepage": "https://github.com/fur-gaming/blocky-ui#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "npm run build:watch",
    "demo": "npm run build && python3 -m http.server 8001 & sleep 2 && open http://localhost:8001/demo.html",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "postcss-import": "^16.1.1",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/blocky-ui.css",
    "./dist/blocky-ui.css": "./dist/blocky-ui.css"
  }
}
